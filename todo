CharacterAttributes = {
        level: 1,
        hp: 1,// Determines how many times a player can take damage before dying & hp regen amount
        sp: 1, // Determines how many times a magic atk can be used and regen amount
        Def: 1,// Determines how much damage is taken from phyiscal hits
        Mdef: 1,// Determines how much damage is taken from Magic hits
        Crit: 1,// Determines wheter or not a hit does increased damgage & increased damage amount

        //stats directly controlled by the player when using levelinh points
        atk: 1,// Determines Physical atk damage and gives a minor boost to hp total
        Matk: 1,// Determines Magic atk damage and gives a minor boost to sp total
        Vit: 1,// Increases hp and def 
        Men: 1,//Increases sp & mdef 
        Dex: 1,//Increases Crit  
    };

